<UserControl x:Class="JI_WPF.ChatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JI_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="130" d:DesignWidth="400">
    <UserControl.Resources>
        <local:App x:Key="ChatItem" />
    </UserControl.Resources>
    <Grid>
        <Image HorizontalAlignment="Left" Height="120" Margin="5,5,0,0" VerticalAlignment="Top" Width="93"/>
        <Label x:Name="MainName" Content="Наименование или ФИО" HorizontalAlignment="Left" Margin="103,4,0,100" Width="auto"/>
        <Label x:Name="Description" Content="Должность или описание" HorizontalAlignment="Left" Margin="103,66,0,0" VerticalAlignment="Top" Width="auto"/>
        <Label x:Name="OU" Content="Управление" HorizontalAlignment="Left" Margin="103,35,0,0" VerticalAlignment="Top" Width="auto"/>
        
    </Grid>
</UserControl>
