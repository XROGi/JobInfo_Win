<UserControl x:Class="JobInfo.XWPF_User"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JobInfo"
             xmlns:cc="clr-namespace:JobInfo.WS_JobInfo"
             mc:Ignorable="d" Height="97.95" Width="107.256">
    <UserControl.Resources>
        <Image x:Key="images01" Source="images\emoticons\01.png"/>
    </UserControl.Resources>
 
    <Grid>
        <Image HorizontalAlignment="Left" Source="d:\work\2019_PNG116.png" Height="64" Margin="1,1,0,0" VerticalAlignment="Top" Width="64">
            <Image.ToolTip>
                <ToolTip Content="{Binding  Name}"></ToolTip>
            </Image.ToolTip>
        </Image>
        <Label  HorizontalAlignment="Left" Margin="0,54,0,0" VerticalAlignment="Top" Height="43" Width="82">
            <Label.Content>
                <AccessText TextWrapping="Wrap" Text="{Binding  Test_Class.Name}" Width="68"/>
            </Label.Content>
        </Label>

    </Grid>
</UserControl>
